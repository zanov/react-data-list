{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "paths": {
      "src/*": ["./src/*"],
      "Components/*": ["./src/components/*"],
      "Pages/*": ["./src/pages/*"],
      "Redux/*": ["./src/redux/*"],
      "Interfaces/*": ["./src/interfaces/*"]
    },
    "esModuleInterop": true,
    "types": ["jest", "node", "@testing-library/jest-dom"]
  },
  "exclude": ["dist/**/*", "node_modules/**/*"]
}
