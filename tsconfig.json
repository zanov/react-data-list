{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "paths": {
      "src/*": ["./src/*"],
      "Components/*": ["./src/components/*"],
      "Pages/*": ["./src/pages/*"]
    },
    "lib": ["dom", "esnext"],
    "esModuleInterop": true
  },
  "exclude": ["dist/**/*", "node_modules/**/*"]
}
